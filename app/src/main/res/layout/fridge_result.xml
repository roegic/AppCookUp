    <androidx.cardview.widget.CardView
        android:id="@+id/fridge_result_card"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fridge_result_title"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="TextView" />

            <View
                android:id="@+id/dividerResult"
                android:layout_width="match_parent"
                android:alpha="0.3"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/fridge_result_title" />

            <TextView
                android:id="@+id/fridge_result_description"
                app:layout_constraintTop_toBottomOf="@id/dividerResult"
                android:layout_width="match_parent"
                android:alpha="0.85"
                android:paddingStart="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="TextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>